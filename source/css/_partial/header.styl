#header
  text-shadow 0 0 1px #fff
  margin 50px auto
  @media screen and (max-width: 992px)
    margin 0 auto
  a
    color #999
    &:hover
      color color-link
      text-decoration none
  .alignleft
    @media screen and (max-width: 992px)
      text-align center
      width 100%
    h1
      font-weight normal
      font-size 2.5em
      line-height 1
      @media screen and (max-width: 992px)
        font-size 3em
        line-height 3em
        margin-top 50px
      a
        font-family font-header
        @media screen and (max-width: 992px)
          color #000

    h2
      font-weight normal
      font-size 0.9em
      line-height 1
      margin-top 10px
      a
        font-family font-header
  
  #main-nav
    font-family font-title
    padding-top 8px
    letter-spacing 1px
    .toggle
      z-index 2
      font-size 20px
      line-height 30px
      position absolute
      top 0
      left 0
      width 100%
      .fa-bars
        float right
        padding-top 15px
        padding-right 20px
        color #fff

    ul
      list-style none
      z-index 10
      li
        height 100%
        float left
        margin-right 30px
        height 30px
        line-height 30px
        .rss-top
          color color-link
        a
          height 100%
          display block
          font-size 16px
          font-weight 400
          line-height 1.3em
          border-bottom 1px solid transparent
          -webkit-box-sizing border-box
          -moz-box-sizing border-box 
          box-sizing border-box
          -webkit-transitionall 0.25s linear
          -moz-transition all 0.25s linear
          transition all 0.25s linear
          &:hover, &:focus
            box-shadow inset 0px -2px #009CDC
            -webkit-box-shadow inset 0px -2px #009CDC
            -moz-box-shadow inset 0px -2px #009CDC

#toggle, .toggle
  display none

@media only screen and (max-width 992px)
  .menu
    background #FFFFFF
    display none 
    opacity: 0 
    width: 100% 
    position: absolute 
    right: 0 
    -webkit-box-shadow: 0px 2px 5px 0px rgba(50, 50, 50, 0.4);
    -moz-box-shadow:    0px 2px 5px 0px rgba(50, 50, 50, 0.4);
    box-shadow:         0px 2px 5px 0px rgba(50, 50, 50, 0.4);
  
  .menu, .menu > li, .menu > li > a
    height auto
  
  .menu > li  
    text-align center
    display: block 
    width: 100% 
    margin: 0  

  .menu > li > a
    display: block 
    width: 100% 
    text-decoration: none 
    -webkit-box-sizing: border-box 
    -moz-box-sizing: border-box 
    box-sizing: border-box 

  .menu > li > a:hover, .menu > li > a:focus
    background #0090CB

  
  
  .toggle:after 
    content 'Main Menu'
    font-size 20px
    display block
    width 100%
    padding 10px 20px
    background #0090CB
    -webkit-border-radius 2px
    border-radius 2px
    font-size 12px
    color #FFFFFF
    -webkit-transition all 0.5s linear
    -moz-transition all 0.5s linear
    -o-transition all 0.5s linear
    transition all 0.5s linear
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box 
  
  
  .toggle:hover:after
    background #0090CB
  
  
  #toggle:checked + .toggle:after
    content 'Close Menu'
    
  .toggle  
    display: block 
    position: relative 
    cursor: pointer 
    -webkit-touch-callout: none 
    -webkit-user-select: none 
    user-select: none 
  #toggle:checked ~ .menu  
    display: block 
    opacity: 1
    margin-top 40px
  

#page-heading-wrap
  text-align left
  line-height 1.4em
  padding 35px 0
  background #f9f9f9
  border-top 1px solid #eee
  border-bottom 1px solid #eee
  margin-bottom 50px
  @media screen and (max-width: 768px)
    margin-bottom 30px
  .inner
    position relative
    h1, h2
      color #000
      font-size 28px
      font-weight 300
      line-height 1.4em
    ul
      margin-top 10px
      font-size 14px
      list-style none
      li
        display inline
        margin-right 15px
        margin-top 5px
        @media screen and (max-width: 768px)
          display block
          font-size 13px
          line-height 1.6em
        .heading-span
          color #444
          font-weight 400
        time
          color rgb(102, 102, 102)
        a
          text-decoration underline
          color #009CDC
          &:hover
            opacity 0.6

